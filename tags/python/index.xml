	height=&#34;511&#34;
	srcset=&#34;http://localhost:1313/p/ipython%E4%B8%8Ejupyter%E7%9A%84%E4%BD%BF%E7%94%A8/jupyter_05_hu2d26dcd763840aef4e52c93416ec1892_257104_480x0_resize_box_3.png 480w, http://localhost:1313/p/ipython%E4%B8%8Ejupyter%E7%9A%84%E4%BD%BF%E7%94%A8/jupyter_05_hu2d26dcd763840aef4e52c93416ec1892_257104_1024x0_resize_box_3.png 1024w&#34;
